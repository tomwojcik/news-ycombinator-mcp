{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:hn.algolia.com)",
      "WebFetch(domain:modelcontextprotocol.github.io)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git stash:*)",
      "Bash(uv run:*)",
      "Bash(uv run pytest:*)",
      "Bash(pre-commit run:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(test:*)",
      "Bash(pgrep:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs"
